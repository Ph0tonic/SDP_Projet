<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Launcher theme -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Main activity themes -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Main activity themes -->
    <style name="AppTheme.MapManagingOfflineTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Display data in Map Activity-->
    <style name="AppTheme.InformationDisplayTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/no_info</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/tiny_padding</item>
    </style>

    <style name="AppTheme.HomeButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.HomeButton.landscape">
        <item name="android:layout_width">@dimen/fragment_home_button_size_landscape</item>
        <item name="android:layout_height">@dimen/fragment_home_button_size_landscape</item>
    </style>

    <style name="AppTheme.HomeButton.portrait">
        <item name="android:layout_width">@dimen/fragment_home_button_size_portrait</item>
        <item name="android:layout_height">@dimen/fragment_home_button_size_portrait</item>
    </style>

    <style name="AppTheme.HomeButtonSmall">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.BarButton" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.MenuBarButton">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/menu_bar_button_divider</item>
    </style>

    <style name="AppTheme.OfflineMapActivityOverlay">
        <item name="android:background">@color/transparentDarkGrey</item>
    </style>

    <style name="AppTheme.OfflineMapActivityBorder">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.FloatingButtonTheme">
        <item name="fab_size">mini</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/asbestos</item>
        <item name="fab_colorDisabled">@color/asbestos</item>
    </style>

    <style name="AppTheme.SearchGroupEditionAddIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>
</resources>